<div class="wrapper">
 
 <div class="frame body-frame">
  <div class="bit-2">
   
   <div class="form-fixed">
    <!-- forms -->
    {{#if user}}
    <h1>Post to ShareCookie</h1>
    
    <form id="postcookie" action="/sharecookie" method="post">
     <textarea  name="texxtt" id="texxtt" class="textarea fixed" required placeholder="What's going on?"></textarea>
     <input class="input-gif" name="picbox" id="picbox" placeholder="Link to an image (Optional)"><br><br>
    <input class="input-gif" name="groupbox" id="groupbox" onkeypress="return group(event)" placeholder="Send this post to a group (Optional)"><br><br>
     <a class="btn" id="ppPreview" type="button">Preview Image</a> <button class="btn " id="login">Create Post</button> <!--<span id="counter">200</span>!-->
    </form>
      
     <br>
    <p>Preview Image Here (if provided)</p>
    <div id="previewImage" style="border 1px solid black">
     <!-- pic !-->  
     &nbsp;
     </div>

    {{else}}
    <h1>Login or Register to participate!</h1>
    
    <div class="frame">
     
     <div class="bit-2">
      
      <h3>Sign in</h3>
      
      {{#if info}}
      <p><font color="red">{{info}}</font></p>
      {{/if}}
      
      <form action="/auth/login" method="post">
       <input class="input-username posts" type="text" name="username" id="username" onkeypress="return alpha(event)" maxlength=15 placeholder="username">
       <br>
       <input class="input-password posts" type="password" name="password" id="password" onkeypress="return pass(event)" placeholder="password">
       <br><br>
       <button class="btn" type="submit">Sign in</button>
       <br><br>
       <a href="/auth/register"><font color=#6666ff>Don't have an account? Sign up now!</font></a>
      </form>
      
     </div>
     
    </div>
    
    {{/if}}
   </div>
   
  </div>
  
  <div class="bit-2">
   {{#if user}}
   <h1>Cookies</h1>
   {{else}}
   {{/if}}
   <!-- cookies -->
   {{#each posts}}
   
   <div class="cookie posts" style="border:1px solid gray; border-radius:2px">
    
    <div class="frame">
     
     <div class="bit-50">
      
         <!-- title -->
      <!-- <a style="text-decoration: none;" href="/cookie/{{id}}"><h2><font color="{{color}}">{{title}}</font></h2></a> !-->
       
       <div class="meta">
        
        <!-- author -->
        <p class="meta-item"><font size=5 color="black"><b>{{names}}</b> </font><a class="a" href="/user/{{author}}"><font size=4 color=#6666ff>@{{author}}</font></p></a>
        <p class="meta-item"><font color=#02313A>Posted on {{formatDate created day="numeric" month="long" year="numeric"}}</font></p>
        <p> {{#if group}} (to group: <a href="/group/{{group}}">{{group}}</a>){{/if}} </p>
       </div>
       
       <!-- content -->
       <div class="content">
        <a style="text-decoration:none;" href="/cookie/{{id}}"><font color="{{color}}" size=5>
        {{content}}
        </font>
        </a>
       </div>
       <br>
       <!-- actions -->
     {{#if myurl}}
     <img src="{{myurl}}" style="border:1px solid black; width:auto; height:200px">
     {{/if}}
           <div class="actions">
       
       {{#if ../user}}
        <!-- like/dislike -->
        <a href="/likepost/{{author}}/{{id}}/home/null" class="btn btn-like"><span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span></a> <a href="/dislikepost/{{author}}/{{id}}/home/null" class="btn btn-dislike"><span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span></a>
       {{/if}}
        {{likes}} likes
        <!-- comments -->
        <a href="/cookie/{{id}}"><font color=#6666ff>Comments ({{commentamount}})</font></a>
       </div>
     </div>
     
    </div>
    
   </div>
   <br>
   {{/each}}
  
   
  </div>
 </div>
</div>

