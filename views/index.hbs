<nav class="navbar">
  <div class="navbar-right">
    <a class="navbar-item {{#equal filter 'date'}}selected{{/equal}}" href="/filter/date">Most Recent</a>
    <font color="white">|</font>
    <a class="navbar-item {{#equal filter 'likes'}}selected{{/equal}}" href="/filter/likes">Most Likes</a>
    {{#if user}}
    <font color="white">|</font>
    <a class="navbar-item" href="/auth/logout">Logout</a>
    {{/if}}
  </div>
  <a class="navbar-brand" href="/">ShareCookie</a>
</nav>

<div class="wrapper">
 
 <div class="frame body-frame">
  <div class="bit-2">
   
   <div class="form-fixed">
    <!-- forms -->
    {{#if user}}
    <h1>Post to ShareCookie</h1>
   
   <form id="postcookie" action="/sharecookie" method="post">
    <input class="input-title" name="titlebox" id="titlebox" required placeholder="Title"><br><br>
    <textarea onkeyup="textCounter(this,'counter',200);" name="texxtt" id="texxtt" class="textarea fixed" required placeholder="Enter your message here! (Max 200 characters)"></textarea>
    <input class="input-gif" name="picbox" id="picbox" placeholder="Link to animated GIF (Not required)"><br><br>
    <button class="btn " id="login">Create Post</button> <span id="counter">200</span>
   </form>
   {{else}}
   <h1>Login or Create an account to post!</h1>
   
   <div class="frame">
    
    <div class="bit-2">
     
     <h3>Sign in</h3>
     
     {{#if info}}
     <p>{{info}}</p>
     {{/if}}
     
     <form action="/auth/login" method="post">
      <input class="input-username" type="text" name="username" id="username" placeholder="username">
      <br>
      <input class="input-password" type="password" name="password" id="password" placeholder="password">
      <br><br>
      <button class="btn" type="submit">Sign in</button>
      <br><br>
      <a href="/auth/register"><font color=#00cc00>Don't have an account? Sign up now!</font></a>
     </form>
     
    </div>
    
   </div>
   
   {{/if}}
   </div>
   
  </div>
  
  <div class="bit-2">
   <h1>Cookies</h1>
   <!-- cookies -->
   {{#each posts}}
   
   <div class="cookie">
    
    <div class="frame">
     
     <div class="bit-75">
      
         <!-- title -->
       <a style="text-decoration: none;" href="/cookie/{{id}}"><h2><font color="{{color}}">{{title}}</font></h2></a>
       
       <div class="meta">
        
        <!-- author -->
        <p class="meta-item">@{{author}}</p>
        
       </div>
       
       <!-- content -->
       <div class="content">
        <font color="{{color}}">
        {{content}}
        </font>
       </div>
       <br>
       <!-- actions -->
       <div class="actions">
        
        <!-- like/dislike -->
        <a href="/likepost/{{id}}" class="btn btn-like">Like </a> <a href="/dislikepost/{{id}}" class="btn btn-dislike">Dislike </a> {{likes}} likes
        
        <!-- comments -->
        <a href="/cookie/{{id}}"><font color=#00cc00>Comments ({{commentamount}})</font></a>
       </div>
      
     </div>
     
     <div class="bit-25">
      
      <img src="{{myurl}}" style="border:none;" width=140px height=140px>
      
     </div>
     
    </div>
    
   </div>
   <hr>
   {{/each}}
   
  </div>
 </div>
</div>
<script>

function textCounter(field,field2,maxlimit)
{
 var countfield = document.getElementById(field2);
 if ( field.value.length > maxlimit ) {
  field.value = field.value.substring( 0, maxlimit );
  return false;
 } else {
  countfield.innerHTML = maxlimit - field.value.length;
 }
}

</script>